<% provide(:title, "Log in") %>
<h1>Log in</h1>
<%= simple_form_for( :session, url: login_path) do |f|%>
    <%= f.input :email%>
    <%= f.input :password%>
    <%=f.input :remember_me, as: :boolean, label: 'Remember me on this computer', wrapper_html: { class: 'options' }%>
    <%= f.button :submit , 'login'%>
<% end %>